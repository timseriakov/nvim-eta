<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= it.title %></title>
  <% if (it.useTailwind) { %>
  <script src="https://cdn.tailwindcss.com"></script>
  <% } %>
</head>
<body class="bg-gray-100">
  <%# This is a comment - navbar section %>
  <nav class="bg-blue-600 text-white p-4">
    <div class="container mx-auto">
      <h1 class="text-2xl font-bold"><%= it.siteName %></h1>
    </div>
  </nav>

  <main class="container mx-auto p-4">
    <% if (it.user && it.user.isAdmin) { %>
      <div class="bg-yellow-100 border-l-4 border-yellow-500 p-4 mb-4">
        <p class="font-bold">Admin Panel</p>
        <p>You have administrative privileges.</p>
      </div>
    <% } %>

    <h2 class="text-3xl font-bold mb-4">Users List</h2>
    
    <% if (it.users && it.users.length > 0) { %>
      <ul class="space-y-2">
        <% it.users.forEach(user => { %>
          <li class="bg-white p-4 rounded shadow">
            <div class="flex items-center justify-between">
              <div>
                <h3 class="font-semibold text-lg"><%= user.name %></h3>
                <p class="text-gray-600"><%= user.email %></p>
              </div>
              <% if (user.verified) { %>
                <span class="bg-green-500 text-white px-3 py-1 rounded">Verified</span>
              <% } else { %>
                <span class="bg-red-500 text-white px-3 py-1 rounded">Unverified</span>
              <% } %>
            </div>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <p class="text-gray-500">No users found.</p>
    <% } %>

    <%# Raw HTML output example %>
    <div class="mt-8">
      <h3 class="text-xl font-bold mb-2">Custom Content</h3>
      <%~ it.customHTML %>
    </div>
  </main>

  <footer class="bg-gray-800 text-white p-4 mt-8">
    <div class="container mx-auto text-center">
      <p>&copy; <%= new Date().getFullYear() %> <%= it.siteName %></p>
    </div>
  </footer>

  <script>
    // JavaScript example
    <% if (it.enableAnalytics) { %>
    console.log('Analytics enabled');
    <% } %>
  </script>
</body>
</html>

